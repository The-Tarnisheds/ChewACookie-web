{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "mercadopago": ["node_modules/mercadopago/index"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
